<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:SoBasicEnglish">
    <FontFamily x:Key="VNITubes">pack://application;,,,/Fonts/#Lato Thin</FontFamily>
    <Style TargetType="{x:Type TextBlock}" x:Key="BaseStyle">
        <Setter Property="FontFamily" Value="{StaticResource VNITubes}"/>
    </Style>
    <Style TargetType="{x:Type TextBlock}" BasedOn="{StaticResource BaseStyle}"/>
</ResourceDictionary>