<Controls:MetroWindow x:Class="SoBasicEnglish.EditorScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SoBasicEnglish"
                         xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
                      
WindowStartupLocation="CenterScreen"
        mc:Ignorable="d" Height="822.6" Width="1170"
        Title="EditorScreen" >
    <Window.CommandBindings>
        <CommandBinding Command="ApplicationCommands.Open" CanExecute="Open_CanExecute" Executed="Open_Executed" />
        <CommandBinding Command="MediaCommands.Play" CanExecute="Play_CanExecute" Executed="Play_Executed" />
        <CommandBinding Command="MediaCommands.Pause" CanExecute="Pause_CanExecute" Executed="Pause_Executed" />
        <CommandBinding Command="MediaCommands.Stop" CanExecute="Stop_CanExecute" Executed="Stop_Executed" />
    </Window.CommandBindings>
    <Grid>
        <Grid >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width='.2*'/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <StackPanel x:Name="stDateChoose" >
                <ListView ItemsSource="{Binding DateListOnGridView}"  Height="auto" Margin="10 20 10 0" x:Name="lvDateList" >
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Name of lesson" Width="150"
                                         DisplayMemberBinding="{Binding DetailInfo}"   ></GridViewColumn>
                        </GridView>
                    </ListView.View>
                    <ListView.GroupStyle>
                        <GroupStyle>
                            <GroupStyle.HeaderTemplate>
                                <DataTemplate>
                                    <TextBlock FontWeight="Bold" FontSize="14" Text="{Binding Name}"/>
                                </DataTemplate>
                            </GroupStyle.HeaderTemplate>
                        </GroupStyle>
                    </ListView.GroupStyle>
                </ListView>
                <Rectangle Margin="10 10 10 0" Fill="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}" OpacityMask="{DynamicResource {x:Static SystemColors.MenuBarBrushKey}}" Cursor="IBeam" Height="5"  />

                <StackPanel Margin="10 20 10 0" Orientation="Horizontal">
                    <Button Margin="30 10 0 0" x:Name="btnDeleteLesson" Click="btnDeleteLesson_Click" Background="Brown" Width="55" Height="55" HorizontalAlignment="Left" VerticalAlignment="Top" Style="{DynamicResource MetroCircleButtonStyle}"  >
                        <Image Source="Images/Assets/Garbage-Closed.png" Height="40" Width="30"></Image>
                    </Button>
                    <Button x:Name="btnAddLesson" Click="btnAddLesson_Click" Background="Green" Margin="10 10 0 0 " Width="55" Height="55" HorizontalAlignment="Left" VerticalAlignment="Top" Style="{DynamicResource MetroCircleButtonStyle}"  >
                        <Image Source="Images/Assets/Circle Add -01.png" Height="40" Width="30" RenderTransformOrigin="0.5,0.62"></Image>
                    </Button>
                </StackPanel>
            </StackPanel>
            <Border Grid.Column="1" BorderBrush="Black" BorderThickness="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height=".1*"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Border Margin="10 5 10 0" BorderBrush="LightBlue" BorderThickness="1.5">
                        <StackPanel x:Name="spLessonName" IsEnabled="False" Orientation="Horizontal">
                            <ComboBox x:Name="cbLevel" ItemsSource="{Binding Levels}" SelectedIndex="0" Width="230" BorderBrush="LightBlue"  BorderThickness="2" Margin="120 10 0 10">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <!--<TextBlock Margin="5 0 0 0" FontSize="25" Text="{Binding levelIndex}" ></TextBlock>-->
                                            <TextBlock Margin="5 0 0 0"  FontSize="25"  Text="{Binding levelValue}" />
                                        </StackPanel>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                            <TextBox BorderBrush="Black" BorderThickness="1.5" Height="auto" Text="{Binding LessonName}" MinWidth="100" Controls:TextBoxHelper.ClearTextButton="True" Controls:TextBoxHelper.Watermark="Lesson name..." FontSize="23" VerticalAlignment="Center" Margin="30 10" Width="auto"></TextBox>
                            <Button Margin="30 0 0 0 " VerticalAlignment="Center"  x:Name="btnSubmitEditing"  Background="Brown"  Width="55" Height="55" HorizontalAlignment="Left"  Style="{DynamicResource MetroCircleButtonStyle}"  >
                                <Image Source="Images/Assets/Edit_04.png" Height="40" Width="30"></Image>
                            </Button>
                            <Button Margin="0 0" VerticalAlignment="Center"  Click="btnSubmitNewLesson_Click" x:Name="btnSubmitNewLesson"  Background="Green"  Width="55" Height="55" HorizontalAlignment="Left"  Style="{DynamicResource MetroCircleButtonStyle}"  >
                                <Image Source="Images/Assets/Circle Add -01.png" Height="40" Width="30" RenderTransformOrigin="0.5,0.62"></Image>
                            </Button>
                            <Button Margin="0 0" VerticalAlignment="Center" Click="btnCancelNewLesson_Click"  x:Name="btnCancelNewLesson"  Background="Red"  Width="55" Height="55" HorizontalAlignment="Left"  Style="{DynamicResource MetroCircleButtonStyle}"  >
                                <Image Source="Images/Assets/Cancel.png" Height="40" Width="30"></Image>
                            </Button>

                        </StackPanel>
                    </Border>

                    <TabControl x:Name="tcLesson"  Grid.Row="1"  Margin="10"  Controls:TabControlHelper.IsUnderlined="True"                                                
                                Controls:TabControlHelper.UnderlineSelectedBrush="Black"
                                 TabStripPlacement="Top"  >
                        <TabItem Header="Geting ready">
                            <Border BorderBrush="Black" BorderThickness="1">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width=".1*"/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <Grid Grid.Column="0">
                                        <StackPanel Orientation="Vertical" >
                                            <Button Click="btnResetGettingReadyQuestion_Click" Margin="10 10 0 0"  x:Name="btnResetGettingReadyQuestion" Background="YellowGreen" Width="61" Height="60" Style="{DynamicResource MetroCircleButtonStyle}"  >
                                                <Image Source="Images/Assets/Command-Reset.png" Height="40" Width="30"></Image>
                                            </Button>
                                            <Button Click="btnAddGettingReadyQuestion_Click" Margin="10 0 0 0"  x:Name="btnAddGettingReadyQuestion" Background="Green" Width="61" Height="60" Style="{DynamicResource MetroCircleButtonStyle}"   >
                                                <Image Source="Images/Assets/Circle Add -01.png" Height="40" Width="30"></Image>
                                            </Button>
                                            <Button Click="btnDeleteGettingReadyQuestion_Click"  Margin="10 0 0 0"   x:Name="btnDeleteGettingReadyQuestion" Background="Red" Width="61" Height="60" Style="{DynamicResource MetroCircleButtonStyle}"   >
                                                <Image Source="Images/Assets/Cancel.png" Height="40" Width="30"></Image>
                                            </Button>
                                        </StackPanel>
                                    </Grid>
                                    <ListView Margin="10" Grid.Column="1" x:Name="lvGetReadyQuestionList">

                                        <ListView.ItemTemplate>
                                            <DataTemplate>
                                                <Grid Height="190" >
                                                    <Border BorderBrush="Black" BorderThickness="1">
                                                        <StackPanel Margin="10">
                                                            <StackPanel Orientation="Horizontal" >
                                                                <TextBox Controls:TextBoxHelper.ClearTextButton="True" Text="{Binding KeyWord,Mode=TwoWay}"  Controls:TextBoxHelper.Watermark="The content of question" BorderBrush="Black" BorderThickness="1" Margin="10 0 0 0" Width="auto" MinWidth="350" FontSize="20"  FontWeight="Bold" ></TextBox>
                                                            </StackPanel>
                                                            <StackPanel Margin="90 10 20 0" Orientation="Horizontal" >

                                                                <StackPanel >
                                                                    <RadioButton IsChecked="{Binding ChoseA,Mode=TwoWay}"  Margin="0 5 0 0"></RadioButton>
                                                                    <RadioButton IsChecked="{Binding ChoseB,Mode=TwoWay}"  Margin="0 13 0 0"></RadioButton>
                                                                    <RadioButton IsChecked="{Binding ChoseC,Mode=TwoWay}"  Margin="0 13.5 0 0"></RadioButton>
                                                                    <RadioButton IsChecked="{Binding ChoseD,Mode=TwoWay}"  Margin="0 13.5 0 0"></RadioButton>
                                                                </StackPanel>
                                                                <StackPanel>
                                                                    <TextBox Controls:TextBoxHelper.ClearTextButton="True" Margin="0 0 0 5"  Controls:TextBoxHelper.WatermarkAlignment="Right" Controls:TextBoxHelper.Watermark="The A choice" Width="auto" HorizontalAlignment="Left" MinWidth="50" Height="auto" VerticalAlignment="Center" BorderBrush="Black" BorderThickness="1" Text="{Binding AnsA, Mode=TwoWay}" FontSize="12"></TextBox>
                                                                    <TextBox Controls:TextBoxHelper.ClearTextButton="True" Margin="0 0 0 5"  Controls:TextBoxHelper.WatermarkAlignment="Right" Controls:TextBoxHelper.Watermark="The B choice" Width="auto" HorizontalAlignment="Left" MinWidth="50" Height="auto" VerticalAlignment="Center" BorderBrush="Black" BorderThickness="1" Text="{Binding AnsB, Mode=TwoWay}" FontSize="12"></TextBox>
                                                                    <TextBox Controls:TextBoxHelper.ClearTextButton="True" Margin="0 0 0 5"  Controls:TextBoxHelper.WatermarkAlignment="Right" Controls:TextBoxHelper.Watermark="The C choice" Width="auto" HorizontalAlignment="Left" MinWidth="50" Height="auto" VerticalAlignment="Center" BorderBrush="Black" BorderThickness="1" Text="{Binding AnsC, Mode=TwoWay}" FontSize="12"></TextBox>
                                                                    <TextBox Controls:TextBoxHelper.ClearTextButton="True" Margin="0 0 0 5"  Controls:TextBoxHelper.WatermarkAlignment="Right" Controls:TextBoxHelper.Watermark="The D choice" Width="auto" HorizontalAlignment="Left" MinWidth="50" Height="auto" VerticalAlignment="Center" BorderBrush="Black" BorderThickness="1" Text="{Binding AnsD, Mode=TwoWay}" FontSize="12"></TextBox>
                                                                </StackPanel>
                                                            </StackPanel>
                                                        </StackPanel>
                                                    </Border>
                                                </Grid>
                                            </DataTemplate>
                                        </ListView.ItemTemplate>
                                    </ListView>
                                </Grid>

