                                                </StackPanel>
                                                <StackPanel Orientation="Horizontal" Margin="30 10 30 10">
                                                    <CheckBox BorderBrush="Black" x:Name="cbB" Checked="cbB_Checked" ></CheckBox>
                                                    <TextBox MinWidth="200"  BorderBrush="LightBlue" BorderThickness="1.5" FontSize="30" FontWeight="Bold" Text="{Binding CurentGetReadyQuestion.ansB, Mode=TwoWay}" Height="50" TextAlignment="Center" VerticalAlignment="Bottom" Margin="0 0 0 0"></TextBox>
                                                </StackPanel>
                                                <StackPanel Orientation="Horizontal" Margin="30 10 30 10">
                                                    <CheckBox BorderBrush="Black" x:Name="cbC" Checked="cbC_Checked"></CheckBox>
                                                    <TextBox  MinWidth="200"  BorderBrush="LightBlue" BorderThickness="1.5" FontSize="30" FontWeight="Bold" Text="{Binding CurentGetReadyQuestion.ansC, Mode=TwoWay}" Height="50" TextAlignment="Center" VerticalAlignment="Bottom" Margin="0 0 0 0"></TextBox>
                                                </StackPanel>
                                                <StackPanel Orientation="Horizontal" Margin="30 10 30 10">
                                                    <CheckBox BorderBrush="Black"  x:Name="cbD" Checked="cbD_Checked"></CheckBox>
                                                    <TextBox MinWidth="200"  BorderBrush="LightBlue" BorderThickness="1.5" FontSize="30" FontWeight="Bold" Text="{Binding CurentGetReadyQuestion.ansD, Mode=TwoWay}" Height="50" TextAlignment="Center" VerticalAlignment="Bottom" Margin="0 0 0 0"></TextBox>
