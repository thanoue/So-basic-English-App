                                            </Button>
                                        </StackPanel>
                                    </Grid>
                                    <ListView Margin="10" Grid.Column="1" ItemsSource="{Binding GettingReadyQuestionList, Mode=TwoWay}" x:Name="lvGetReadyQuestionList">
