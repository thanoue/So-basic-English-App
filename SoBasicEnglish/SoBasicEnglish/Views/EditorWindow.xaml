                                                        <Image Source="..\Images/Assets/Command-Reset.png" Height="40" Width="30"/>
                                                    </Button>
                                                    <Button Margin="0 0 0 0" x:Name="btnAddkeyWords" Command="{Binding Click_AddItem}" Background="Green" Width="61" Height="60" Style="{DynamicResource MetroCircleButtonStyle}"   >
                                                        <Image Source="..\Images/Assets/Circle Add -01.png" Height="40" Width="30"/>
                                                    </Button>
                                                    <Button Margin="0 0 0 0"  x:Name="btnDeletekeyWords" Command="{Binding Click_DeleteItem}" CommandParameter="{Binding SelectedItem, ElementName=lvKeyWordsList}" Background="Red" Width="61" Height="60" Style="{DynamicResource MetroCircleButtonStyle}"   >
                                                        <Image Source="..\Images/Assets/Cancel.png" Height="40" Width="30"/>
                                                    </Button>
                                                </StackPanel>
                                                <Grid Grid.Column="1">
                                                    <ListView BorderBrush="Black" SelectedIndex="{Binding SelectedIndexOfKeyWord, Mode=TwoWay}" ItemsSource="{Binding KeyWordsList, Mode=TwoWay}"  BorderThickness="1"  x:Name="lvKeyWordsList" Margin="0 10 0 10">
                                                        <ListView.ItemTemplate>
                                                            <DataTemplate>

                                                                <Border Margin="5"  BorderBrush="Black" BorderThickness="1" >
                                                                    <Grid Height="200" >
                                                                        <Grid.ColumnDefinitions >
                                                                            <ColumnDefinition Width=".3*"/>
                                                                            <ColumnDefinition/>
                                                                        </Grid.ColumnDefinitions>
                                                                        <Border Grid.Column="1" Margin="10" BorderThickness="1.5" BorderBrush="PaleVioletRed">
                                                                            <StackPanel Margin="10 0 0  0" >
                                                                                <StackPanel Orientation="Horizontal" Height="50">
                                                                                    <TextBox Controls:TextBoxHelper.ClearTextButton="True" Text="{Binding Word, Mode=TwoWay}" Controls:TextBoxHelper.WatermarkAlignment="Right" Controls:TextBoxHelper.Watermark="The word..." Width="auto" MinWidth="50" Height="40" VerticalAlignment="Center" BorderBrush="Black" BorderThickness="1"  FontSize="20"/>
                                                                                    <TextBlock Text="/" FontWeight="ExtraBold" Margin="10 0 0 0" FontSize="35"/>
                                                                                    <TextBox Margin="10 0 0 0 "                                                                                          
                                                                                          Controls:TextBoxHelper.ClearTextButton="True"  Controls:TextBoxHelper.WatermarkAlignment="Right" Controls:TextBoxHelper.Watermark="How to read..." Width="auto" MinWidth="{Binding Index}" Height="40" VerticalAlignment="Center" BorderBrush="Black" BorderThickness="1" Text="{Binding HowToReadWord, Mode=TwoWay}" FontSize="20">
                                                                                        <i:Interaction.Triggers>
                                                                                            <i:EventTrigger EventName="GotFocus">
                                                                                                <i:InvokeCommandAction   
                                                                                                       Command="{Binding ElementName=lvKeyWordsList,Path=DataContext.GotFocus_HowToReadKeyWord}"      
                                                                                                        CommandParameter="{Binding}"
                                                                                              />
                                                                                               
                                                                                            </i:EventTrigger>
                                                                                        </i:Interaction.Triggers>
                                                                                    </TextBox>
                                                                                    <!-- Command="{Binding Command}" 
                                         CommandParameter="{Binding RelativeSource={RelativeSource Self}}"-->
                                                                                </StackPanel>
                                                                                <TextBox Controls:TextBoxHelper.ClearTextButton="True"  Controls:TextBoxHelper.WatermarkAlignment="Right" Controls:TextBoxHelper.Watermark="The vietnamese meaning..." Width="500" HorizontalAlignment="Left" MinWidth="50" Height="40" VerticalAlignment="Center" BorderBrush="Black" BorderThickness="1" Text="{Binding VieWord, Mode=TwoWay}" FontSize="20"/>
                                                                                <TextBox Margin="0 5 0 0 " Controls:TextBoxHelper.ClearTextButton="True"  Controls:TextBoxHelper.WatermarkAlignment="Right" Controls:TextBoxHelper.Watermark="Word Type..." Width="200" HorizontalAlignment="Left" MinWidth="50" Height="30" VerticalAlignment="Center" BorderBrush="Black" BorderThickness="1" Text="{Binding TypeOfWord, Mode=TwoWay}" FontSize="15"/>
                                                                                <TextBox Margin="0 5 0 0 " Controls:TextBoxHelper.ClearTextButton="True"  Controls:TextBoxHelper.WatermarkAlignment="Right" Controls:TextBoxHelper.Watermark="Sentence..." Width="500" HorizontalAlignment="Left" MinWidth="50" Height="40" VerticalAlignment="Center" BorderBrush="Black" BorderThickness="1" Text="{Binding ExSentence, Mode=TwoWay}" FontSize="20"/>
                                                                            </StackPanel>
                                                                        </Border>
                                                                        <Grid Grid.Column="0">
                                                                            <Image Margin="5 0 35 10" Height="170" Width="150" Grid.Column="0" Source="{Binding PictureOfWord}"/>
                                                                            <Button MinWidth="{Binding Index}" 
                                                                                   
                                                                                    Margin="155,0,-0.4,168" VerticalAlignment="Center"  Background="Green"  Width="35" Height="35" HorizontalAlignment="Left"  Style="{DynamicResource MetroCircleButtonStyle}"  >
                                                                                <Image Source="..\Images/Assets/Media-End.png" Height="22" Width="22"/>
                                                                            </Button>
                                                                        </Grid>

                                                                    </Grid>
                                                                </Border>
                                                            </DataTemplate>
                                                        </ListView.ItemTemplate>
                                                    </ListView>
                                                </Grid>
                                            </Grid>

                                        </Grid>
                                    </Border>
                                </TabItem>
                                <TabItem Header="Practice">
                                    <Border Margin="10"  BorderBrush="Black" BorderThickness="1">
                                        <Grid Margin="10">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width=".1*"/>
                                                <ColumnDefinition/>
                                            </Grid.ColumnDefinitions>
                                            <StackPanel   Orientation="Vertical" >
                                                <Button  Margin="10 10 0 0" x:Name="btnResetkeyWordEx" Background="YellowGreen" Width="61" Height="60" Style="{DynamicResource MetroCircleButtonStyle}"  >
                                                    <Image Source="..\Images/Assets/Command-Reset.png" Height="40" Width="30"/>
                                                </Button>
                                                <Button Margin="10 0 0 0"   x:Name="btnAddkeyWordEx" Background="Green" Width="61" Height="60" Style="{DynamicResource MetroCircleButtonStyle}"   >
                                                    <Image Source="..\Images/Assets/Circle Add -01.png" Height="40" Width="30"/>
                                                </Button>
                                                <Button   Margin="10 0 0 0"  x:Name="btnDeletekeyWordEx" Background="Red" Width="61" Height="60" Style="{DynamicResource MetroCircleButtonStyle}"   >
                                                    <Image Source="..\Images/Assets/Cancel.png" Height="40" Width="30"/>
                                                </Button>
                                            </StackPanel>
                                            <Grid Grid.Column="1" >
                                                <ListView Margin="10" BorderBrush="Black" BorderThickness="1" x:Name="lvKeyWordExList" >
                                                    <ListView.ItemTemplate>
                                                        <DataTemplate>
                                                            <Grid Height="190" >
                                                                <Border BorderBrush="Black" BorderThickness="1">
                                                                    <StackPanel Margin="10">
                                                                        <StackPanel Orientation="Horizontal" >
                                                                            <TextBox Controls:TextBoxHelper.ClearTextButton="True" Text="{Binding KeyWord, Mode=TwoWay}"  Controls:TextBoxHelper.Watermark="The content of question" BorderBrush="Black" BorderThickness="1" Margin="10 0 0 0" Width="auto" MinWidth="350" FontSize="20"  FontWeight="Bold" />
                                                                        </StackPanel>
                                                                        <StackPanel Margin="90 10 20 0" Orientation="Horizontal" >
                                                                            <StackPanel >
                                                                                <RadioButton IsChecked="{Binding ChoseA, Mode=TwoWay}"  Margin="0 5 0 0"/>
                                                                                <RadioButton IsChecked="{Binding ChoseB, Mode=TwoWay}"  Margin="0 13 0 0"/>
                                                                                <RadioButton IsChecked="{Binding ChoseC, Mode=TwoWay}"  Margin="0 13.5 0 0"/>
                                                                                <RadioButton IsChecked="{Binding ChoseD, Mode=TwoWay}"  Margin="0 13.5 0 0"/>
                                                                            </StackPanel>
                                                                            <StackPanel>
                                                                                <TextBox Controls:TextBoxHelper.ClearTextButton="True" Margin="0 0 0 5"  Controls:TextBoxHelper.WatermarkAlignment="Right" Controls:TextBoxHelper.Watermark="The A choice" Width="auto" HorizontalAlignment="Left" MinWidth="50" Height="auto" VerticalAlignment="Center" BorderBrush="Black" BorderThickness="1" Text="{Binding AnsA, Mode=TwoWay}" FontSize="12"/>
                                                                                <TextBox Controls:TextBoxHelper.ClearTextButton="True" Margin="0 0 0 5"  Controls:TextBoxHelper.WatermarkAlignment="Right" Controls:TextBoxHelper.Watermark="The B choice" Width="auto" HorizontalAlignment="Left" MinWidth="50" Height="auto" VerticalAlignment="Center" BorderBrush="Black" BorderThickness="1" Text="{Binding AnsB, Mode=TwoWay}" FontSize="12"/>
                                                                                <TextBox Controls:TextBoxHelper.ClearTextButton="True" Margin="0 0 0 5"  Controls:TextBoxHelper.WatermarkAlignment="Right" Controls:TextBoxHelper.Watermark="The C choice" Width="auto" HorizontalAlignment="Left" MinWidth="50" Height="auto" VerticalAlignment="Center" BorderBrush="Black" BorderThickness="1" Text="{Binding AnsC, Mode=TwoWay}" FontSize="12"/>
                                                                                <TextBox Controls:TextBoxHelper.ClearTextButton="True" Margin="0 0 0 5"  Controls:TextBoxHelper.WatermarkAlignment="Right" Controls:TextBoxHelper.Watermark="The D choice" Width="auto" HorizontalAlignment="Left" MinWidth="50" Height="auto" VerticalAlignment="Center" BorderBrush="Black" BorderThickness="1" Text="{Binding AnsD, Mode=TwoWay}" FontSize="12"/>
                                                                            </StackPanel>

                                                                        </StackPanel>
                                                                    </StackPanel>
                                                                </Border>
                                                            </Grid>
                                                        </DataTemplate>
                                                    </ListView.ItemTemplate>
                                                </ListView>
                                            </Grid>
                                        </Grid>
                                    </Border>
                                </TabItem>

                            </TabControl>

                        </TabItem>
                        <TabItem Header="Sentences" >
                            <TabControl 
                                x:Name="tcSentence"
                                Controls:TabControlHelper.IsUnderlined="True"    
                                        TabStripPlacement="Left"
                                Controls:TabControlHelper.UnderlineSelectedBrush="Black">
                                <TabItem Header="Study" >
                                    <Border Margin="10,10,9.6,-12" BorderBrush="Black" BorderThickness="1">
                                        <Grid Margin="0.2,0.2,-0.2,-0.8">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width=".1*" />
                                                <ColumnDefinition/>
                                            </Grid.ColumnDefinitions>
                                            <StackPanel Grid.Column="0" Orientation="Vertical">
                                                <Button Margin="10 10 0 0" x:Name="btnResetSentences" Background="YellowGreen" Width="61" Height="60" Style="{DynamicResource MetroCircleButtonStyle}"  >
                                                    <Image Source="..\Images/Assets/Command-Reset.png" Height="40" Width="30"/>
                                                </Button>
                                                <Button Margin="10 0 0 0"  x:Name="btnAddSentences" Background="Green" Width="61" Height="60" Style="{DynamicResource MetroCircleButtonStyle}"   >
