                                            <Button Command="{Binding Click_ResetItem}" Margin="10 10 0 0"  x:Name="btnResetGettingReadyQuestion" Background="YellowGreen" Width="61" Height="60" Style="{DynamicResource MetroCircleButtonStyle}"  >
