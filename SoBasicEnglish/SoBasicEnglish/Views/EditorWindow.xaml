<Controls:MetroWindow
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SoBasicEnglish.Views"
        xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
        xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns:ViewModels="clr-namespace:SoBasicEnglish.ViewModels"
    xmlns:simpleChildWindow="clr-namespace:MahApps.Metro.SimpleChildWindow;assembly=MahApps.Metro.SimpleChildWindow"
    x:Class="SoBasicEnglish.Views.EditorWindow"                         
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        
        
        Height="822.6" Width="1170"
        Title="EditorScreen">
    <Window.DataContext>
        <ViewModels:EditorViewModel></ViewModels:EditorViewModel>
    </Window.DataContext>
    <Grid>
        <Grid >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width='.2*'/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <StackPanel x:Name="stDateChoose" >
                <ListView          
                    ItemsSource="{Binding DateListOnGridView}" Height="auto" Margin="10 20 10 0" x:Name="lvDateList"  >
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="SelectionChanged">
                            <i:InvokeCommandAction
                                Command="{Binding lvDate_SelectedtionChange}" CommandParameter="{Binding SelectedItem,ElementName=lvDateList}"
                                ></i:InvokeCommandAction>
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Name of lesson" Width="150"
                                         DisplayMemberBinding="{Binding DetailInfo}"   />
                        </GridView>
                    </ListView.View>
                    <ListView.GroupStyle>
                        <GroupStyle>
                            <GroupStyle.HeaderTemplate>
                                <DataTemplate>
                                    <TextBlock FontWeight="Bold" FontSize="14" Text="{Binding Name}"/>
                                </DataTemplate>
                            </GroupStyle.HeaderTemplate>
                        </GroupStyle>
                    </ListView.GroupStyle>
                </ListView>
                <Rectangle Margin="10 10 10 0" Fill="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}" OpacityMask="{DynamicResource {x:Static SystemColors.MenuBarBrushKey}}" Cursor="IBeam" Height="5"  />

                <StackPanel Margin="10 20 10 0" Orientation="Horizontal">
                    <Button Command="{Binding Click_DeleteLesson}" Margin="30 10 0 0" x:Name="btnDeleteLesson" Background="Brown" Width="55" Height="55" HorizontalAlignment="Left" VerticalAlignment="Top" Style="{DynamicResource MetroCircleButtonStyle}"  >
                        <Image Source="..\Images/Assets/Garbage-Closed.png" Height="40" Width="30"/>
                    </Button>
                    <Button x:Name="btnAddLesson" Command="{Binding Click_StartCreatingLeson}"  Background="Green" Margin="10 10 0 0 " Width="55" Height="55" HorizontalAlignment="Left" VerticalAlignment="Top" Style="{DynamicResource MetroCircleButtonStyle}"  >
                        <Image Source="..\Images/Assets/Circle Add -01.png" Height="40" Width="30" RenderTransformOrigin="0.5,0.62"/>
                    </Button>
                </StackPanel>
            </StackPanel>
            <Border IsEnabled="{Binding CreatingLesson}" Grid.Column="1" BorderBrush="Black" BorderThickness="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height=".1*"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Border Margin="10 5 10 0" BorderBrush="LightBlue" BorderThickness="1.5">
                        <StackPanel x:Name="spLessonName" Orientation="Horizontal">
                            <ComboBox SelectedIndex="{Binding CbLessonTypeSelectedIndex,Mode=TwoWay}"  x:Name="cbLevel" ItemsSource="{Binding Levels}"  Width="230" BorderBrush="LightBlue"  BorderThickness="2" Margin="10 10 0 10">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Margin="5 0 0 0"  FontSize="25"  Text="{Binding LevelValue}" />
                                        </StackPanel>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                            <TextBox  BorderBrush="Black" BorderThickness="1.5" Height="auto" Text="{Binding LessonName}" MinWidth="100" Controls:TextBoxHelper.ClearTextButton="True" Controls:TextBoxHelper.Watermark="Lesson name..." FontSize="20" MaxWidth="600" VerticalAlignment="Center" Margin="10 10 10 10" Width="auto"/>
                            <Button
                                Command="{Binding Click_EditNameOfLesson}"
                                Margin="0 0 0 0 " VerticalAlignment="Center"  x:Name="btnSubmitEditing"  Background="DarkCyan"  Width="55" Height="55" HorizontalAlignment="Left"  Style="{DynamicResource MetroCircleButtonStyle}"  >
                                <Image Source="..\Images/Assets/Edit_04.png" Height="40" Width="30"/>
                            </Button>
                            <Button Command="{Binding Click_SubmitCreatingLesson}"  Margin="0 0" VerticalAlignment="Center"  x:Name="btnSubmitNewLesson"  Background="Green"  Width="55" Height="55" HorizontalAlignment="Left"  Style="{DynamicResource MetroCircleButtonStyle}"  >
                                <Image Source="..\Images/Assets/Circle Add -01.png" Height="40" Width="30" RenderTransformOrigin="0.5,0.62"/>
                            </Button>
                            <Button Command="{Binding Click_CancelCreatingLesson}"  Margin="0 0" VerticalAlignment="Center"  Background="Red"  Width="55" Height="55" HorizontalAlignment="Left"  Style="{DynamicResource MetroCircleButtonStyle}"  >
                                <Image Source="..\Images/Assets/Cancel.png" Height="40" Width="30" RenderTransformOrigin="0.5,0.62"/>
                            </Button>


                        </StackPanel>
                    </Border>

                    <TabControl x:Name="tcLesson"  Grid.Row="1"  Margin="10"  Controls:TabControlHelper.IsUnderlined="True"                                                
                                Controls:TabControlHelper.UnderlineSelectedBrush="Black"
                                SelectedIndex="{Binding TcLessonSelectedIndex, Mode=TwoWay}"
                                
                                 TabStripPlacement="Top"  >
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="SelectionChanged">
                                <i:InvokeCommandAction
                                Command="{Binding TcLessonDate_SelectedtionChange}"
                                    ></i:InvokeCommandAction>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                        <TabItem Header="Geting ready">
                            <Border BorderBrush="Black" BorderThickness="1">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width=".1*"/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <Grid Grid.Column="0">
                                        <StackPanel Orientation="Vertical" >
                                            <Button Command="{Binding Click_ResetItem}" Margin="10 10 0 0"  x:Name="btnResetGettingReadyQuestion" Background="YellowGreen" Width="61" Height="60" Style="{DynamicResource MetroCircleButtonStyle}"  >
                                                <Image Source="..\Images/Assets/Command-Reset.png" Height="40" Width="30"/>
                                            </Button>
                                            <Button Command="{Binding Click_AddItem}" Margin="10 0 0 0"  x:Name="btnAddGettingReadyQuestion" Background="Green" Width="61" Height="60" Style="{DynamicResource MetroCircleButtonStyle}"   >
                                                <Image Source="..\Images/Assets/Circle Add -01.png" Height="40" Width="30"/>
                                            </Button>
                                            <Button Command="{Binding Click_DeleteItem}" CommandParameter="{Binding SelectedItem, ElementName=lvGetReadyQuestionList}" Margin="10 0 0 0"   x:Name="btnDeleteGettingReadyQuestion" Background="Red" Width="61" Height="60" Style="{DynamicResource MetroCircleButtonStyle}"   >
                                                <Image Source="..\Images/Assets/Cancel.png" Height="40" Width="30"/>
                                            </Button>
                                            <Button Command="{Binding Click_EditLessonItem}" Margin="10 0 0 0"   Background="DarkCyan" Width="61" Height="60" Style="{DynamicResource MetroCircleButtonStyle}"   >
                                                <Image Source="..\Images/Assets/Edit_04.png" Height="40" Width="30"/>
                                            </Button>
                                        </StackPanel>
                                    </Grid>
                                    <ListView Margin="10" Grid.Column="1" SelectedIndex="{Binding SelectedIndexOfList, Mode=TwoWay}" ItemsSource="{Binding GettingReadyQuestionList, Mode=TwoWay}" x:Name="lvGetReadyQuestionList">
                                        <ListView.ItemTemplate>
                                            <DataTemplate>
                                                <Grid Height="190" >
                                                    <Border BorderBrush="Black" BorderThickness="1">
                                                        <StackPanel Margin="10">
                                                            <StackPanel Orientation="Horizontal" >
                                                                <TextBox Controls:TextBoxHelper.ClearTextButton="True" Text="{Binding KeyWord, Mode=TwoWay}"  Controls:TextBoxHelper.Watermark="The content of question" BorderBrush="Black" BorderThickness="1" Margin="10 0 0 0" Width="auto" MinWidth="350" FontSize="20"  FontWeight="Bold" />
                                                            </StackPanel>
                                                            <StackPanel Margin="90 10 20 0" Orientation="Horizontal" >

                                                                <StackPanel >
                                                                    <RadioButton IsChecked="{Binding ChoseA, Mode=TwoWay}"  Margin="0 5 0 0"/>
                                                                    <RadioButton IsChecked="{Binding ChoseB, Mode=TwoWay}"  Margin="0 13 0 0"/>
                                                                    <RadioButton IsChecked="{Binding ChoseC, Mode=TwoWay}"  Margin="0 13.5 0 0"/>
                                                                    <RadioButton IsChecked="{Binding ChoseD, Mode=TwoWay}"  Margin="0 13.5 0 0"/>
                                                                </StackPanel>
                                                                <StackPanel>
                                                                    <TextBox Controls:TextBoxHelper.ClearTextButton="True" Margin="0 0 0 5"  Controls:TextBoxHelper.WatermarkAlignment="Right" Controls:TextBoxHelper.Watermark="The A choice" Width="auto" HorizontalAlignment="Left" MinWidth="50" Height="auto" VerticalAlignment="Center" BorderBrush="Black" BorderThickness="1" Text="{Binding AnsA, Mode=TwoWay}" FontSize="12"/>
                                                                    <TextBox Controls:TextBoxHelper.ClearTextButton="True" Margin="0 0 0 5"  Controls:TextBoxHelper.WatermarkAlignment="Right" Controls:TextBoxHelper.Watermark="The B choice" Width="auto" HorizontalAlignment="Left" MinWidth="50" Height="auto" VerticalAlignment="Center" BorderBrush="Black" BorderThickness="1" Text="{Binding AnsB, Mode=TwoWay}" FontSize="12"/>
                                                                    <TextBox Controls:TextBoxHelper.ClearTextButton="True" Margin="0 0 0 5"  Controls:TextBoxHelper.WatermarkAlignment="Right" Controls:TextBoxHelper.Watermark="The C choice" Width="auto" HorizontalAlignment="Left" MinWidth="50" Height="auto" VerticalAlignment="Center" BorderBrush="Black" BorderThickness="1" Text="{Binding AnsC, Mode=TwoWay}" FontSize="12"/>
                                                                    <TextBox Controls:TextBoxHelper.ClearTextButton="True" Margin="0 0 0 5"  Controls:TextBoxHelper.WatermarkAlignment="Right" Controls:TextBoxHelper.Watermark="The D choice" Width="auto" HorizontalAlignment="Left" MinWidth="50" Height="auto" VerticalAlignment="Center" BorderBrush="Black" BorderThickness="1" Text="{Binding AnsD, Mode=TwoWay}" FontSize="12"/>
                                                                </StackPanel>
                                                            </StackPanel>
                                                        </StackPanel>
                                                    </Border>
                                                </Grid>
                                            </DataTemplate>
                                        </ListView.ItemTemplate>
                                    </ListView>
                                </Grid>
                            </Border>

                        </TabItem>
                        <TabItem Header="KeyWords" Margin="-0.2,0,-0.2,0.4" >
                            <TabControl x:Name="tcKeyWords" Controls:TabControlHelper.IsUnderlined="True"    
                                        TabStripPlacement="Left"
                                        SelectedIndex="{Binding TcKeyWordSelectedInDex, Mode=OneWayToSource}"
                                Controls:TabControlHelper.UnderlineSelectedBrush="Black" >
                                <TabItem Header="Study" >
                                    <Border BorderBrush="Black" BorderThickness="1" Margin="0 10">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition/>
                                                <RowDefinition Height=".0*"/>
                                            </Grid.RowDefinitions>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width=".08*"/>
                                                    <ColumnDefinition/>
                                                </Grid.ColumnDefinitions>
                                                <StackPanel Grid.Column="0" Orientation="Vertical">
                                                    <Button  Margin="0 10 0 0" x:Name="btnResetkeyWords" Command="{Binding Click_ResetItem}"  Background="YellowGreen" Width="61" Height="60" Style="{DynamicResource MetroCircleButtonStyle}"  >
                                                        <Image Source="..\Images/Assets/Command-Reset.png" Height="40" Width="30"/>
                                                    </Button>
                                                    <Button Margin="0 0 0 0" x:Name="btnAddkeyWords" Command="{Binding Click_AddItem}" Background="Green" Width="61" Height="60" Style="{DynamicResource MetroCircleButtonStyle}"   >
                                                        <Image Source="..\Images/Assets/Circle Add -01.png" Height="40" Width="30"/>
                                                    </Button>
                                                    <Button Margin="0 0 0 0"  x:Name="btnDeletekeyWords" Command="{Binding Click_DeleteItem}" CommandParameter="{Binding SelectedItem, ElementName=lvKeyWordsList}" Background="Red" Width="61" Height="60" Style="{DynamicResource MetroCircleButtonStyle}"   >
                                                        <Image Source="..\Images/Assets/Cancel.png" Height="40" Width="30"/>
                                                    </Button>
                                                    <Button Command="{Binding Click_EditLessonItem}" Margin="0 0 0 0"   Background="DarkCyan" Width="61" Height="60" Style="{DynamicResource MetroCircleButtonStyle}"   >
                                                        <Image Source="..\Images/Assets/Edit_04.png" Height="40" Width="30"/>
                                                    </Button>
                                                </StackPanel>
                                                <Grid Grid.Column="1">
                                                    <ListView BorderBrush="Black" SelectedIndex="{Binding SelectedIndexOfList, Mode=TwoWay}" ItemsSource="{Binding KeyWordsList, Mode=TwoWay}"  BorderThickness="1"  x:Name="lvKeyWordsList" Margin="0 10 0 10">
                                                        <ListView.ItemTemplate>
                                                            <DataTemplate>
                                                                <Border Margin="5"  BorderBrush="Black" BorderThickness="1" >
                                                                    <Grid Height="200" >
                                                                        <Grid.ColumnDefinitions >
                                                                            <ColumnDefinition Width=".3*"/>
                                                                            <ColumnDefinition/>
                                                                        </Grid.ColumnDefinitions>
                                                                        <Border Grid.Column="1" Margin="10" BorderThickness="1.5" BorderBrush="PaleVioletRed">
                                                                            <StackPanel Margin="10 0 0  0" >
                                                                                <StackPanel Orientation="Horizontal" Height="50">
                                                                                    <TextBox Controls:TextBoxHelper.ClearTextButton="True" Text="{Binding Word, Mode=TwoWay}" Controls:TextBoxHelper.WatermarkAlignment="Right" Controls:TextBoxHelper.Watermark="The word..." Width="auto" MinWidth="50" Height="40" VerticalAlignment="Center" BorderBrush="Black" BorderThickness="1"  FontSize="20"/>
                                                                                    <TextBlock Text="/" FontWeight="ExtraBold" Margin="10 0 0 0" FontSize="35"/>
                                                                                    <TextBox Margin="10 0 0 0 "                                                                                          
                                                                                          Controls:TextBoxHelper.ClearTextButton="True"  Controls:TextBoxHelper.WatermarkAlignment="Right" Controls:TextBoxHelper.Watermark="How to read..." Width="auto" MinWidth="{Binding Index}" Height="40" VerticalAlignment="Center" BorderBrush="Black" BorderThickness="1" Text="{Binding HowToReadWord, Mode=TwoWay}" FontSize="20">
                                                                                        <i:Interaction.Triggers>
                                                                                            <i:EventTrigger EventName="GotFocus">
                                                                                                <i:InvokeCommandAction   
                                                                                                       Command="{Binding ElementName=lvKeyWordsList,Path=DataContext.GotFocus_HowToReadKeyWord}"      
                                                                                                        CommandParameter="{Binding}"
                                                                                              />

                                                                                            </i:EventTrigger>
                                                                                        </i:Interaction.Triggers>
                                                                                    </TextBox>
                                                                                </StackPanel>
                                                                                <TextBox Controls:TextBoxHelper.ClearTextButton="True"  Controls:TextBoxHelper.WatermarkAlignment="Right" Controls:TextBoxHelper.Watermark="The vietnamese meaning..." Width="500" HorizontalAlignment="Left" MinWidth="50" Height="40" VerticalAlignment="Center" BorderBrush="Black" BorderThickness="1" Text="{Binding VieWord, Mode=TwoWay}" FontSize="20"/>
                                                                                <TextBox Margin="0 5 0 0 " Controls:TextBoxHelper.ClearTextButton="True"  Controls:TextBoxHelper.WatermarkAlignment="Right" Controls:TextBoxHelper.Watermark="Word Type..." Width="200" HorizontalAlignment="Left" MinWidth="50" Height="30" VerticalAlignment="Center" BorderBrush="Black" BorderThickness="1" Text="{Binding TypeOfWord, Mode=TwoWay}" FontSize="15"/>
                                                                                <TextBox Margin="0 5 0 0 " Controls:TextBoxHelper.ClearTextButton="True"  Controls:TextBoxHelper.WatermarkAlignment="Right" Controls:TextBoxHelper.Watermark="Sentence..." Width="500" HorizontalAlignment="Left" MinWidth="50" Height="40" VerticalAlignment="Center" BorderBrush="Black" BorderThickness="1" Text="{Binding ExSentence, Mode=TwoWay}" FontSize="20"/>
                                                                            </StackPanel>
                                                                        </Border>
                                                                        <Grid Grid.Column="0">
                                                                            <Image Margin="5 0 35 10" Height="170" Width="150" Grid.Column="0" Source="{Binding PictureOfWord}"/>
                                                                            <Button MinWidth="{Binding Index}"                                                                                    
                                                                                   Command="{Binding ElementName=lvKeyWordsList,Path=DataContext.Click_ChooseKeyWordImage}"      
                                                                                     CommandParameter="{Binding}"
                                                                                    Margin="155,0,-0.4,168" VerticalAlignment="Center"  Background="Green"  Width="35" Height="35" HorizontalAlignment="Left"  Style="{DynamicResource MetroCircleButtonStyle}"  >
                                                                                <Image Source="..\Images/Assets/Media-End.png" Height="15" Width="15"/>
                                                                            </Button>
                                                                        </Grid>

                                                                    </Grid>
                                                                </Border>
                                                            </DataTemplate>
                                                        </ListView.ItemTemplate>
                                                    </ListView>
                                                </Grid>
                                            </Grid>

                                        </Grid>
                                    </Border>
                                </TabItem>
                                <TabItem Header="Practice">
                                    <Border Margin="10"  BorderBrush="Black" BorderThickness="1">
                                        <Grid Margin="10">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width=".1*"/>
                                                <ColumnDefinition/>
                                            </Grid.ColumnDefinitions>
                                            <StackPanel   Orientation="Vertical" >
                                                <Button Command="{Binding Click_ResetItem}"  Margin="10 10 0 0" x:Name="btnResetkeyWordEx" Background="YellowGreen" Width="61" Height="60" Style="{DynamicResource MetroCircleButtonStyle}"  >
                                                    <Image Source="..\Images/Assets/Command-Reset.png" Height="40" Width="30"/>
                                                </Button>
                                                <Button Margin="10 0 0 0" Command="{Binding Click_AddItem}"  x:Name="btnAddkeyWordEx" Background="Green" Width="61" Height="60" Style="{DynamicResource MetroCircleButtonStyle}"   >
                                                    <Image Source="..\Images/Assets/Circle Add -01.png" Height="40" Width="30"/>
                                                </Button>
                                                <Button   Margin="10 0 0 0"  Command="{Binding Click_DeleteItem}" CommandParameter="{Binding SelectedItem, ElementName=lvKeyWordExList}" x:Name="btnDeletekeyWordEx" Background="Red" Width="61" Height="60" Style="{DynamicResource MetroCircleButtonStyle}"   >
                                                    <Image Source="..\Images/Assets/Cancel.png" Height="40" Width="30"/>
                                                </Button>
                                                <Button Command="{Binding Click_EditLessonItem}" Margin="10 0 0 0"   Background="DarkCyan" Width="61" Height="60" Style="{DynamicResource MetroCircleButtonStyle}"   >
                                                    <Image Source="..\Images/Assets/Edit_04.png" Height="40" Width="30"/>
                                                </Button>
                                            </StackPanel>
                                            <Grid Grid.Column="1" >
                                                <ListView SelectedIndex="{Binding SelectedIndexOfList, Mode=OneWayToSource}" Margin="10" BorderBrush="Black" ItemsSource="{Binding KeyWordExList}" BorderThickness="1" x:Name="lvKeyWordExList" >
                                                    <ListView.ItemTemplate>
                                                        <DataTemplate>
                                                            <Grid Height="190" >
                                                                <Border BorderBrush="Black" BorderThickness="1">
                                                                    <StackPanel Margin="10">
                                                                        <StackPanel Orientation="Horizontal" >
                                                                            <TextBox Controls:TextBoxHelper.ClearTextButton="True" Text="{Binding KeyWord, Mode=TwoWay}"  Controls:TextBoxHelper.Watermark="The content of question" BorderBrush="Black" BorderThickness="1" Margin="10 0 0 0" Width="auto" MinWidth="350" FontSize="20"  FontWeight="Bold" />
                                                                        </StackPanel>
                                                                        <StackPanel Margin="90 10 20 0" Orientation="Horizontal" >
                                                                            <StackPanel >
                                                                                <RadioButton IsChecked="{Binding ChoseA, Mode=TwoWay}"  Margin="0 5 0 0"/>
                                                                                <RadioButton IsChecked="{Binding ChoseB, Mode=TwoWay}"  Margin="0 13 0 0"/>
                                                                                <RadioButton IsChecked="{Binding ChoseC, Mode=TwoWay}"  Margin="0 13.5 0 0"/>
                                                                                <RadioButton IsChecked="{Binding ChoseD, Mode=TwoWay}"  Margin="0 13.5 0 0"/>
                                                                            </StackPanel>
                                                                            <StackPanel>
                                                                                <TextBox Controls:TextBoxHelper.ClearTextButton="True" Margin="0 0 0 5"  Controls:TextBoxHelper.WatermarkAlignment="Right" Controls:TextBoxHelper.Watermark="The A choice" Width="auto" HorizontalAlignment="Left" MinWidth="50" Height="auto" VerticalAlignment="Center" BorderBrush="Black" BorderThickness="1" Text="{Binding AnsA, Mode=TwoWay}" FontSize="12"/>
                                                                                <TextBox Controls:TextBoxHelper.ClearTextButton="True" Margin="0 0 0 5"  Controls:TextBoxHelper.WatermarkAlignment="Right" Controls:TextBoxHelper.Watermark="The B choice" Width="auto" HorizontalAlignment="Left" MinWidth="50" Height="auto" VerticalAlignment="Center" BorderBrush="Black" BorderThickness="1" Text="{Binding AnsB, Mode=TwoWay}" FontSize="12"/>
                                                                                <TextBox Controls:TextBoxHelper.ClearTextButton="True" Margin="0 0 0 5"  Controls:TextBoxHelper.WatermarkAlignment="Right" Controls:TextBoxHelper.Watermark="The C choice" Width="auto" HorizontalAlignment="Left" MinWidth="50" Height="auto" VerticalAlignment="Center" BorderBrush="Black" BorderThickness="1" Text="{Binding AnsC, Mode=TwoWay}" FontSize="12"/>
                                                                                <TextBox Controls:TextBoxHelper.ClearTextButton="True" Margin="0 0 0 5"  Controls:TextBoxHelper.WatermarkAlignment="Right" Controls:TextBoxHelper.Watermark="The D choice" Width="auto" HorizontalAlignment="Left" MinWidth="50" Height="auto" VerticalAlignment="Center" BorderBrush="Black" BorderThickness="1" Text="{Binding AnsD, Mode=TwoWay}" FontSize="12"/>
                                                                            </StackPanel>

                                                                        </StackPanel>
                                                                    </StackPanel>
                                                                </Border>
                                                            </Grid>
                                                        </DataTemplate>
                                                    </ListView.ItemTemplate>
                                                </ListView>
                                            </Grid>
                                        </Grid>
                                    </Border>
                                </TabItem>

                            </TabControl>

                        </TabItem>
                        <TabItem Header="Sentences" >
                            <TabControl 
                                x:Name="tcSentence"
                                Controls:TabControlHelper.IsUnderlined="True"    
                                        TabStripPlacement="Left"
                                SelectedIndex="{Binding TcSentenceSelectedInDex, Mode=OneWayToSource}"
                                Controls:TabControlHelper.UnderlineSelectedBrush="Black">
                                <TabItem Header="Study" >
                                    <Border Margin="10,10,9.6,-12" BorderBrush="Black" BorderThickness="1">
                                        <Grid Margin="0.2,0.2,-0.2,-0.8">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width=".1*" />
                                                <ColumnDefinition/>
                                            </Grid.ColumnDefinitions>
                                            <StackPanel Grid.Column="0" Orientation="Vertical">
                                                <Button Command="{Binding Click_ResetItem}" Margin="10 10 0 0" x:Name="btnResetSentences" Background="YellowGreen" Width="61" Height="60" Style="{DynamicResource MetroCircleButtonStyle}"  >
                                                    <Image Source="..\Images/Assets/Command-Reset.png" Height="40" Width="30"/>
                                                </Button>
                                                <Button  Command="{Binding Click_AddItem}" Margin="10 0 0 0"  x:Name="btnAddSentences" Background="Green" Width="61" Height="60" Style="{DynamicResource MetroCircleButtonStyle}"   >
                                                    <Image  Source="..\Images/Assets/Circle Add -01.png" Height="40" Width="30"/>
                                                </Button>
                                                <Button  Command="{Binding Click_DeleteItem}" CommandParameter="{Binding SelectedItem, ElementName=lvSentencesList}" Margin="10 0 0 0"  x:Name="btnDeletekeySentences" Background="Red" Width="61" Height="60" Style="{DynamicResource MetroCircleButtonStyle}"   >
                                                    <Image Source="..\Images/Assets/Cancel.png" Height="40" Width="30"/>
                                                </Button>
                                                <Button Command="{Binding Click_EditLessonItem}" Margin="10 0 0 0"   Background="DarkCyan" Width="61" Height="60" Style="{DynamicResource MetroCircleButtonStyle}"   >
                                                    <Image Source="..\Images/Assets/Edit_04.png" Height="40" Width="30"/>
                                                </Button>
                                            </StackPanel>
                                            <ListView SelectedIndex="{Binding SelectedIndexOfList, Mode=TwoWay}" ItemsSource="{Binding SentenceList}" Grid.Column="1" BorderBrush="Black"  Margin="10" BorderThickness="1"  x:Name="lvSentencesList" >
                                                <ListView.ItemTemplate>
                                                    <DataTemplate>
                                                        <Border  BorderBrush="Black" BorderThickness="1" Margin="5">
                                                            <StackPanel Margin="5">
                                                                <TextBox Margin="5" FontWeight="Bold" Controls:TextBoxHelper.ClearTextButton="True"  Controls:TextBoxHelper.WatermarkAlignment="Right" Controls:TextBoxHelper.Watermark="The sentences..." Width="500" HorizontalAlignment="Left" MinWidth="50" Height="40" VerticalAlignment="Center" BorderBrush="Black" BorderThickness="1" Text="{Binding KeySentence, Mode=TwoWay}" FontSize="20"/>
                                                                <TextBox Margin="5" FontStyle="Italic" Controls:TextBoxHelper.ClearTextButton="True"  Controls:TextBoxHelper.WatermarkAlignment="Right"  Controls:TextBoxHelper.Watermark="How to Read..." MinWidth="{Binding Index, Mode=TwoWay}" Width="500" HorizontalAlignment="Left"  Height="40" VerticalAlignment="Center" BorderBrush="Black" BorderThickness="1" Text="{Binding HowToRead, Mode=TwoWay}" FontSize="20" FontFamily="Century Gothic">
                                                                    <i:Interaction.Triggers>
                                                                        <i:EventTrigger EventName="GotFocus">
                                                                            <i:InvokeCommandAction   
                                                                                                       Command="{Binding ElementName=lvSentencesList,Path=DataContext.GotFocus_HowToReadSentence}"      
                                                                                                        CommandParameter="{Binding}"
                                                                                              />

                                                                        </i:EventTrigger>
                                                                    </i:Interaction.Triggers>
                                                                </TextBox>
                                                                <TextBox Margin="5" FontWeight="Heavy"  Controls:TextBoxHelper.ClearTextButton="True"  Controls:TextBoxHelper.WatermarkAlignment="Right" Controls:TextBoxHelper.Watermark="The vietnamese meaning..." Width="500" HorizontalAlignment="Left" MinWidth="50" Height="40" VerticalAlignment="Center" BorderBrush="Black" BorderThickness="1" Text="{Binding VieMeanOfSentence, Mode=TwoWay}" FontSize="20"/>
                                                            </StackPanel>
                                                        </Border>
                                                    </DataTemplate>
                                                </ListView.ItemTemplate>
                                            </ListView>

                                        </Grid>

                                    </Border>
                                </TabItem>
                                <TabItem Header="Practice">
                                    <Border Margin="10"  BorderBrush="Black" BorderThickness="1">

                                        <Grid Margin="10">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width=".1*"/>
                                                <ColumnDefinition/>
                                            </Grid.ColumnDefinitions>
                                            <StackPanel Orientation="Vertical" Grid.Column="0">
                                                <Button Command="{Binding Click_ResetItem}" Margin="10 0 0 0" x:Name="btnResetSentenceEx" Background="YellowGreen" Width="61" Height="60" Style="{DynamicResource MetroCircleButtonStyle}"  >
                                                    <Image Source="..\Images/Assets/Command-Reset.png" Height="40" Width="30"/>
                                                </Button>
                                                <Button  Command="{Binding Click_AddItem}" Margin="10 0 0 0"  x:Name="btnAddSentenceEx" Background="Green" Width="61" Height="60" Style="{DynamicResource MetroCircleButtonStyle}"   >
