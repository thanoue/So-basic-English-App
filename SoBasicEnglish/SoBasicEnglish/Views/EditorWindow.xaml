<Controls:MetroWindow
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SoBasicEnglish.Views"
        xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
        xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns:ViewModels="clr-namespace:SoBasicEnglish.ViewModels" x:Class="SoBasicEnglish.Views.EditorWindow"                         
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        
        
        Height="822.6" Width="1170"
        Title="EditorScreen">
    <Window.DataContext>
        <ViewModels:EditorViewModel></ViewModels:EditorViewModel>
    </Window.DataContext>
    <Grid>
        <Grid >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width='.2*'/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <StackPanel x:Name="stDateChoose" >
                <ListView ItemsSource="{Binding DateListOnGridView}" Height="auto" Margin="10 20 10 0" x:Name="lvDateList"  >
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Name of lesson" Width="150"
                                         DisplayMemberBinding="{Binding DetailInfo}"   />
                        </GridView>
                    </ListView.View>
                    <ListView.GroupStyle>
                        <GroupStyle>
                            <GroupStyle.HeaderTemplate>
                                <DataTemplate>
                                    <TextBlock FontWeight="Bold" FontSize="14" Text="{Binding Name}"/>
                                </DataTemplate>
                            </GroupStyle.HeaderTemplate>
                        </GroupStyle>
                    </ListView.GroupStyle>
                </ListView>
                <Rectangle Margin="10 10 10 0" Fill="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}" OpacityMask="{DynamicResource {x:Static SystemColors.MenuBarBrushKey}}" Cursor="IBeam" Height="5"  />

                <StackPanel Margin="10 20 10 0" Orientation="Horizontal">
                    <Button Margin="30 10 0 0" x:Name="btnDeleteLesson" Background="Brown" Width="55" Height="55" HorizontalAlignment="Left" VerticalAlignment="Top" Style="{DynamicResource MetroCircleButtonStyle}"  >
                        <Image Source="..\Images/Assets/Garbage-Closed.png" Height="40" Width="30"/>
                    </Button>
                    <Button x:Name="btnAddLesson"  Background="Green" Margin="10 10 0 0 " Width="55" Height="55" HorizontalAlignment="Left" VerticalAlignment="Top" Style="{DynamicResource MetroCircleButtonStyle}"  >
                        <Image Source="..\Images/Assets/Circle Add -01.png" Height="40" Width="30" RenderTransformOrigin="0.5,0.62"/>
                    </Button>
                </StackPanel>
            </StackPanel>
            <Border Grid.Column="1" BorderBrush="Black" BorderThickness="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height=".1*"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Border Margin="10 5 10 0" BorderBrush="LightBlue" BorderThickness="1.5">
                        <StackPanel x:Name="spLessonName" IsEnabled="False" Orientation="Horizontal">
                            <ComboBox x:Name="cbLevel" ItemsSource="{Binding Levels}" SelectedIndex="0" Width="230" BorderBrush="LightBlue"  BorderThickness="2" Margin="120 10 0 10">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Margin="5 0 0 0"  FontSize="25"  Text="{Binding levelValue}" />
                                        </StackPanel>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                            <TextBox BorderBrush="Black" BorderThickness="1.5" Height="auto" Text="{Binding LessonName}" MinWidth="100" Controls:TextBoxHelper.ClearTextButton="True" Controls:TextBoxHelper.Watermark="Lesson name..." FontSize="23" VerticalAlignment="Center" Margin="30 10" Width="auto"/>
                            <Button
                                Command="{Binding Command}" 
                                         CommandParameter="{Binding RelativeSource={RelativeSource Self}}"
                                Margin="30 0 0 0 " VerticalAlignment="Center"  x:Name="btnSubmitEditing"  Background="Brown"  Width="55" Height="55" HorizontalAlignment="Left"  Style="{DynamicResource MetroCircleButtonStyle}"  >
                                <Image Source="..\Images/Assets/Edit_04.png" Height="40" Width="30"/>
                            </Button>
                            <Button Margin="0 0" VerticalAlignment="Center"  x:Name="btnSubmitNewLesson"  Background="Green"  Width="55" Height="55" HorizontalAlignment="Left"  Style="{DynamicResource MetroCircleButtonStyle}"  >
                                <Image Source="..\Images/Assets/Circle Add -01.png" Height="40" Width="30" RenderTransformOrigin="0.5,0.62"/>
                            </Button>
                            <Button Margin="0 0" VerticalAlignment="Center"   x:Name="btnCancelNewLesson"  Background="Red"  Width="55" Height="55" HorizontalAlignment="Left"  Style="{DynamicResource MetroCircleButtonStyle}"  >
                                <Image Source="..\Images/Assets/Cancel.png" Height="40" Width="30"/>
                            </Button>

                        </StackPanel>
                    </Border>

                    <TabControl x:Name="tcLesson"  Grid.Row="1"  Margin="10"  Controls:TabControlHelper.IsUnderlined="True"                                                
                                Controls:TabControlHelper.UnderlineSelectedBrush="Black"
                                SelectedIndex="{Binding TcLessonSelectedIndex, Mode=OneWayToSource}"
                                 TabStripPlacement="Top"  >
                        <TabItem Header="Geting ready">
                            <Border BorderBrush="Black" BorderThickness="1">
